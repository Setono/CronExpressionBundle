{
    "name": "setono/cron-expression-bundle",
    "type": "symfony-bundle",
    "description": "Symfony bundle that integrates dragonmantank/cron-expression",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": "^7.2",
        "brick/reflection": "^0.3",
        "doctrine/doctrine-bundle": "^1.9 || ^2.0",
        "dragonmantank/cron-expression": "^2.2",
        "symfony/config": "^3.4 || ^4.1 || ^5.0",
        "symfony/dependency-injection": "^3.4 || ^4.1 || ^5.0",
        "symfony/form": "^3.4 || ^4.1 || ^5.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.2",
        "korbeil/phpstan-generic-rules": "^0.2.4",
        "matthiasnoback/symfony-dependency-injection-test": "^4.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12.2",
        "phpunit/phpunit": "^8.5",
        "roave/security-advisories": "dev-master",
        "sylius-labs/coding-standard": "^3.1",
        "thecodingmachine/phpstan-safe-rule": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\CronExpressionBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\CronExpressionBundle\\Tests\\": "tests/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon -l max src/",
        "check-style": "vendor/bin/ecs check src/ tests/",
        "fix-style": "vendor/bin/ecs check --fix src/ tests/",
        "phpunit": "vendor/bin/phpunit",
        "tests": [
            "@phpspec",
            "@phpunit"
        ]
    }
}
